@model  EmlakYonetim.Models.Entity.t_contact
@using EmlakYonetim.Models.Entity

@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top:50px">
    <h2 style="margin-top:-25px;">Kontakt Detayları</h2>
    <img src="@Url.Content(Model.Gorsel)" class="rounded-circle" alt="Görsel" width="300" height="200">

    <div class="container mt-3">
        @if (Model.organizasyonMu)
        {
            <p>@Model.organizasyonAdi adlı <strong>organizasyonun</strong> iletişim detayları</p>
            <table class="table table-striped table-bordered">
                <thead class="bg-primary text-light">
                    <tr>
                        <th>Organizasyon Adı</th>
                        <th>Vergi NO:</th>
                        <th>Kayıt NO:</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>

                        <td>@Model.organizasyonAdi</td>
                        <td>@Model.vergiNo</td>
                        <td>@Model.kayitNo</td>
                    </tr>
                </tbody>
                <thead>
                    <tr>
                        <th>Ülke</th>
                        <th>Web Sitesi</th>
                        <th>Cep Telefonu</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Ulke</td>
                        <td>@(string.IsNullOrEmpty(Model.website) ? "Bu organizasyon web siteye sahip değildir." : Model.website)</td>
                        <td>@Model.cepTelefonu</td>
                    </tr>
                </tbody>
                <thead>
                    <tr>
                        <th>E-mail - 2</th>
                        <th>İş Telefonu</th>
                        <th>İş Telefonu - 2</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@(string.IsNullOrEmpty(Model.e_mail2) ? "Bu organizasyon 2. bir e-maile sahip değildir." : Model.e_mail2)</td>
                        <td>@Model.isTelefonu</td>
                        <td>@(string.IsNullOrEmpty(Model.isTelefonu2.ToString()) ? "Bu organizasyon 2. bir iş telefonuna sahip değildir." : Model.isTelefonu2.ToString())</td>
                    </tr>
                </tbody>
                <thead>
                    <tr>
                        <th>Tercih Edilen İletişim</th>
                        <th>Yetki Grubu</th>
                        <th>Adres</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.tercihEdilenIletisim</td>
                        <td>@Model.yetkiGrubuID</td>
                        <td>@Model.adresID</td>
                    </tr>
                </tbody>
                <thead>
                    <tr>
                        <th colspan="3" style="text-align: center">Description</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="3" style="text-align: center">@(string.IsNullOrEmpty(Model.description) ? "Bu organizasyon ile ilgili herhangi bir açıklama mevcut değildir." : Model.description)</td>
                    </tr>
                </tbody>
            </table>
        }
        else
        {
            <p>@Model.isim adlı <strong>kişinin</strong> iletişim detayları:</p>
            <table class="table table-striped table-bordered">
                <thead class="bg-primary text-light">
                    <tr>
                        <th>Adı</th>
                        <th>Soy İsim</th>
                        <th>Ülke</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.isim</td>
                        <td>@Model.soyAdi</td>
                        <td>@Model.Ulke</td>
                    </tr>
                </tbody>
                <thead>
                    <tr>
                        <th>Bağlı Olduğu Organizasyon</th>
                        <th>E-mail</th>
                        <th>Cep Telefonu</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @if (Model.organizasyonAtama != 0)
                        {
                            <td>@ViewBag.bagliOlduguOrganizasyon</td>
                        }
                        else
                        {
                            <td>Herhangi bir organizasyona bağlı değil.</td>
                        }
                        <td>@Model.e_mail</td>
                        <td>@Model.cepTelefonu</td>
                    </tr>
                </tbody>
                <thead>
                    <tr>
                        <th>E-mail - 2</th>
                        <th>İş Telefonu</th>
                        <th>İş Telefonu - 2</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@(string.IsNullOrEmpty(Model.e_mail) ? "Bu kişi 2. bir e-mail adresine sahip değildir." : Model.e_mail2)</td>
                        <td>@(string.IsNullOrEmpty(Model.isTelefonu.ToString()) ? "Bu kişi bir iş telefonuna sahip değildir." : Model.isTelefonu.ToString())</td>
                        <td>@(string.IsNullOrEmpty(Model.isTelefonu2.ToString()) ? "Bu kişi 2. bir iş telefonuna sahip değildir." : Model.isTelefonu2.ToString())</td>
                    </tr>
                </tbody>
                <thead>
                    <tr>
                        <th>Tercih Edilen İletişim</th>
                        <th>Yetki Grubu</th>
                        <th>Adres</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.tercihEdilenIletisim</td>
                        <td>@Model.yetkiGrubuID</td>
                        <td>@Model.adresID</td>
                    </tr>
                </tbody>
                <thead>
                    <tr>
                        <th colspan="3" style="text-align: center">Yetkiler</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="3" style="text-align: center">
                            <ol>
                                @foreach (var rol in ViewBag.KullaniciRolleri)
                                {
                                    <li>
                                        <span style="vertical-align: middle;">@rol.rolAdi</span>
                                        <span class="material-symbols-outlined" style="vertical-align: middle;">check_circle</span>
                                    </li>
                                }
                            </ol>
                        </td>
                    </tr>
                </tbody>
            </table>    
        }

        <!--- ORGANİZASYON YA DA NORMAL KULLANICIYA GÖRE DİV ÜZERİNDE BELİRTTİĞİMİZ İDLER İLE HİDE/SHOW YAPAYACAĞIZ.-->
    </div>
</div>