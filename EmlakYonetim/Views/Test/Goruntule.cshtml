

<!DOCTYPE html>
<html>
<head>
    <title>Harita Görüntüleme</title>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDZGMIJ_T7t1koK_uUE23_MeUziWworYvI"></script>
    <script>
        function initMap() {
            var latitude = parseFloat('@ViewBag.Latitude');
            var longitude = parseFloat('@ViewBag.Longitude');

            var mapOptions = {
                center: { lat: latitude, lng: longitude },
                zoom: 20  // Harita yakınlaştırma seviyesi
            };

            var map = new google.maps.Map(document.getElementById('map'), mapOptions);

            var marker = new google.maps.Marker({
                position: { lat: latitude, lng: longitude },
                map: map,
                title: 'Seçilen Konum'
            });
        }
    </script>
</head>
<body>
    <div id="map" style="width: 100%; height: 500px;"></div>
    <script>
        // Harita yüklenince initMap fonksiyonunu çağır
        google.maps.event.addDomListener(window, 'load', initMap);
    </script>
</body>
</html>
